Import('env', 'lib')

testbed_env = env.Clone()
testbed_env.Append(
    CPPPATH=['#testbed/include', '#engine/include'],
    CPPDEFINES=['QIMPORT'],
    # LIBS=['user32']
)

sources = Glob('src/*.cc')

target = 'testbed'

# Extend the libraries rather than resetting them
testbed_env['LIBS'].extend(lib)
executable = testbed_env.Program(target=target, source=sources)
Return('executable')